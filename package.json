{
  "name": "llm-archive",
  "version": "1.0.0",
  "description": "Local conversation archive with semantic search for LLM conversations",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "ingest": "tsx src/cli/ingest.ts",
    "search": "tsx src/cli/search.ts",
    "extract-learnings": "tsx src/cli/extract-learnings.ts",
    "search-learnings": "tsx src/cli/search-learnings.ts",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "llm",
    "conversation",
    "archive",
    "semantic-search",
    "embeddings"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "better-sqlite3": "^11.7.0",
    "commander": "^12.0.0",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  }
}
